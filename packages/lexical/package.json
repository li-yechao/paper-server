{
  "name": "@paper/lexical",
  "version": "1.0.0-alpha.8",
  "description": "paper lexical editor",
  "author": "LiYechao <liyechao@yechao.xyz>",
  "license": "Apache-2.0",
  "main": "src/index.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --base ./",
    "test": "jest"
  },
  "dependencies": {
    "@emotion/css": "^11.7.1",
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@lexical/code": "^0.2.4",
    "@lexical/file": "^0.2.4",
    "@lexical/hashtag": "^0.2.4",
    "@lexical/link": "^0.2.4",
    "@lexical/list": "^0.2.4",
    "@lexical/overflow": "^0.2.4",
    "@lexical/react": "^0.2.4",
    "@lexical/rich-text": "^0.2.4",
    "@lexical/selection": "^0.2.4",
    "@lexical/table": "^0.2.4",
    "@popperjs/core": "^2.11.5",
    "katex": "^0.15.3",
    "lexical": "^0.2.4",
    "react-popper": "^2.2.5",
    "react-use": "^17.3.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/jest": "^27.4.1",
    "@types/jest-environment-puppeteer": "^5.0.0",
    "@types/katex": "^0.14.0",
    "@types/puppeteer": "^5.4.5",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@vitejs/plugin-react": "^1.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-puppeteer": "^6.1.0",
    "puppeteer": "^13.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.2",
    "vite": "^2.8.6"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "rootDir": "src",
        "testMatch": [
          "<rootDir>/**/__tests__/**/*.test.ts",
          "<rootDir>/**/__tests__/**/*.test.tsx"
        ],
        "transform": {
          "^.+\\.(t|j)sx?$": "ts-jest"
        },
        "collectCoverageFrom": [
          "**/*.(t|j)s",
          "**/*.(t|j)sx",
          "!constants.ts"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
          "./jest.setup.ts"
        ],
        "moduleNameMapper": {
          "\\.css$": "identity-obj-proxy"
        }
      },
      {
        "displayName": "integration",
        "preset": "jest-puppeteer",
        "rootDir": "src",
        "testMatch": [
          "<rootDir>/**/__integration__/**/*.test.ts",
          "<rootDir>/**/__integration__/**/*.test.tsx"
        ],
        "transform": {
          "^.+\\.(t|j)sx?$": "ts-jest"
        },
        "setupFilesAfterEnv": [
          "./jest.setup-integration.ts"
        ]
      }
    ]
  }
}
